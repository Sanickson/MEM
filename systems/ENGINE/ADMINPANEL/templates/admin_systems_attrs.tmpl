#encoding utf-8
<table id="tbl_systems_attrs">
  <thead>
  <tr>
    <th>№</th>
    <th>Имя</th>
    <th>Значение</th>
  </tr>
  </thead>
  <tbody>
        #set $N=1
        #for $item in $attrs
            <tr id="$item.ID" value="$item.VALUE">
                <td class="har">$N</td>
                <td class="hac">$item.ID</td>
                <td class="hac">$item.VALUE</td>
            </tr>
            #set $N=$N+1
        #end for
  </tbody>
</table>
